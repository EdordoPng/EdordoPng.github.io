---
const { title, img, desc, url, badge, tags, target = "_blank", lang } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="group rounded-lg bg-base-100 hover:shadow-xl transition-all ease-in-out hover:scale-[102%] hover:bg-neutral hover:text-neutral-content"
>
  <a href={url} target={target}>
    <div class="hero-content flex-col md:flex-row">
      
      {
        img && (
          <div class="relative shrink-0">
            <Image
              src={img}
              width={750}
              height={422}
              format="webp"
              alt={title}
              class="max-w-full md:max-w-[13rem] rounded-lg aspect-video object-cover"
            />
            {lang && (
              <div class="absolute bottom-2 right-2 badge badge-neutral text-xs font-bold opacity-90 group-hover:bg-base-100 group-hover:text-neutral">
                {lang}
              </div>
            )}
          </div>
        )
      }
      
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && (
            <div class="badge badge-secondary mx-2 group-hover:bg-base-100 group-hover:text-neutral">
              {badge}
            </div>
          )}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <div class="badge badge-outline">
                  {tag}
                </div>
              ))
          }
          </div>
      </div>
    </div>
  </a>
</div>