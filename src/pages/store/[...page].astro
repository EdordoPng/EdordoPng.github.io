---
import BaseLayout from "../../layouts/BaseLayout.astro";
// import HorizontalShopItem from "../../components/HorizontalShopItem.astro"; // Non serve per ora
import { getCollection } from "astro:content";

// La logica lato server puÃ² rimanere, anche se non la usiamo nel template per ora.
export async function getStaticPaths({ paginate }) {
  const items = await getCollection("store");
  items.sort((a, b) => b.data.updatedDate.valueOf() - a.data.updatedDate.valueOf());
  return paginate(items, { pageSize: 10 });
}
const { page } = Astro.props;
