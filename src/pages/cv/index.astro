---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HorizontalCard from "../../components/HorizontalCard.astro";
---

<BaseLayout title="Resume Selection | Edoardo" sideBarActiveItemID="cv">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Select the right CV</div>
    <div class="text-lg py-2">
      I have several areas of specialization. Choose the professional profile you are interested in exploring:
    </div>
  </div>

  <div class="flex flex-col gap-4">
    
    <HorizontalCard
      title="Blockchain Developer"
      img="/projects/cv-blockchain.jpg" 
      desc="Specialized in Smart Contracts (Solidity/Rust), DeFi, NFTs, and decentralized architectures (EVM & Solana)."
      url="/cv/blockchain"
      badge="Blockchain"
      target="_self"
    />

    <div class="divider my-0"></div>

    <HorizontalCard
      title="Cybersecurity Expert"
      img="/projects/cv-cyber.jpg"
      desc="Focused on Side-Channel Analysis, Applied Cryptography, Network Security, and AI Safety."
      url="/cv/cybersecurity"
      badge="Cybersecurity"
      target="_self"
    />

    <div class="divider my-0"></div>


  </div>
</BaseLayout>